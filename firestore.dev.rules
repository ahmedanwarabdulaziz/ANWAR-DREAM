rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development-friendly rules - more permissive for testing
    // TODO: Replace with production rules before going live
    
    // Users collection - allow authenticated users to read/write
    match /users/{customerId} {
      allow read, write: if request.auth != null;
    }
    
    // User mappings collection - allow authenticated users to read/write
    match /user_mappings/{uid} {
      allow read, write: if request.auth != null;
    }
    
    // Anonymous tokens collection - allow anyone
    match /anonymous_tokens/{token} {
      allow read, write: if true;
    }
    
    // Device tokens collection - allow authenticated users
    match /users/{customerId}/devices/{token} {
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write other collections for development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}



